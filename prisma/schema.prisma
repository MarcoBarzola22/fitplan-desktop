generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- BIBLIOTECA DE EJERCICIOS ---

model Pattern {
  id        Int        @id @default(autoincrement())
  name      String     @unique // Ej: "Tracción", "Empuje", "Pierna"
  exercises Exercise[]
}

model Exercise {
  id          Int       @id @default(autoincrement())
  name        String    // Ej: "Press Banca"
  videoUrl    String?
  patternId   Int
  pattern     Pattern   @relation(fields: [patternId], references: [id])
  
  // Relación con las rutinas donde se use este ejercicio
  routineItems RoutineItem[]
}

// --- CONSTRUCTOR DE RUTINAS ---

model Routine {
  id          Int       @id @default(autoincrement())
  clientName  String
  daysCount   Int       // Cuántos días tiene la rutina (ej: 3)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  days        RoutineDay[]
}

model RoutineDay {
  id        Int           @id @default(autoincrement())
  dayNumber Int           // 1, 2, 3...
  routineId Int
  routine   Routine       @relation(fields: [routineId], references: [id], onDelete: Cascade)
  items     RoutineItem[]
}

model RoutineItem {
  id          Int         @id @default(autoincrement())
  
  // Datos del ejercicio en ese momento
  sets        String?     // String para permitir rangos ej: "3-4"
  reps        String?     // Ej: "10-12"
  rest        String?     // Ej: "90s"
  weight      String?     // Opcional
  rpe         String?     // Opcional
  
  // Relaciones
  dayId       Int
  day         RoutineDay  @relation(fields: [dayId], references: [id], onDelete: Cascade)
  exerciseId  Int
  exercise    Exercise    @relation(fields: [exerciseId], references: [id])
}